<div class="message-thread">
<% @receipts.each do |receipt| %>
  <% message = receipt.message %>
  <div class="message row">
    <div class="msg-headers col s2">
    <h3><%= link_to message.sender.username, user_path(message.sender) %></h3>
    <div class="date">
      <%=  message.created_at.strftime("%A, %b %d, %Y at %I:%M%p") %>
    </div>
    </div>
    <div class="msg-content col s10">
      <div class="body">
        <%= message.body %>
      </div>
    </div>
  </div>
<% end %>
</div>